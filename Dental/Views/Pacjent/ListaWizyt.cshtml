@model IEnumerable<Dental.Models.AnulowanieWizytyModel>
@{
    ViewBag.Title = "Aktualne wizyty";
    Layout = "~/Views/Shared/MenuPacjent.cshtml";
    
}

@using GridMvc.Html


@Html.Grid(Model).Columns(columns =>
{
    columns.Add(a => a.Data).Titled("Data");
    columns.Add(a => a.Godzina).Titled("Godzina");
    columns.Add(a => a.Gabinet).Titled("Gabinet");
    columns.Add(a => a.ImieLekarza).Titled("Imię lekarza");
    columns.Add(a => a.NazwiskoLekarza).Titled("Nazwisko lekarza");
    columns.Add(a => a.Stan).Titled("Stan");


    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Html.ActionLink("Anuluj", "AnulujWizyte", new { a.WizytaID }, new { @style = "color:red" })).Titled("Anulowanie");

}).WithPaging(5).Sortable(true).Filterable(true)


