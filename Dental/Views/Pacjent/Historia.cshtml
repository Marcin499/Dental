@model IEnumerable<Dental.Models.WizytaHistoriaPacjenta>
@{
    ViewBag.Title = "Historia";
    Layout = "~/Views/Shared/MenuPacjent.cshtml";
}

@using GridMvc.Html


@Html.Grid(Model).Columns(columns =>
{
    columns.Add(a => a.Data).Titled("Data");
    columns.Add(a => a.Godzina).Titled("Godzina");
    columns.Add(a => a.Gabinet).Titled("Gabinet");
    columns.Add(a => a.ImieLekarz).Titled("Imię lekarza");
    columns.Add(a => a.NazwiskoLekarz).Titled("Nazwisko lekarza");
    columns.Add(a => a.FormaPlatnosci).Titled("Forma płatności");
    columns.Add(a => a.Kwota).Titled("Kwota");

    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Html.ActionLink("więcej info.", "InfoHistoriaPacjenta", new { a.PacjentID, a.Data }, new { @style = "color:green" })).Titled("Informacje o leczeniu");

}).WithPaging(20).Sortable(true).Filterable(true)



