@model IEnumerable<DAL.Model.Cennik>

@using GridMvc.Html


@Html.Grid(Model).Columns(columns =>
{
    columns.Add(a => a.Zabieg).Titled("Zabieg");    
    columns.Add(a => a.Kategoria).Titled("Kategoria");
    columns.Add(a => a.Cena).Titled("Cena");
   
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Html.ActionLink("Edytuj", "EditZabieg", new { a.ZabiegID }, new { @style = "color:blue" })).Titled("Edycja");
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Html.ActionLink("Usuń", "DeleteZabieg", new { a.ZabiegID }, new { @style = "color:red" })).Titled("Usuń");
}).WithPaging(20).Sortable(true).Filterable(true)
