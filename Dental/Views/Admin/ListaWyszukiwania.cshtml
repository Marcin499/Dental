@model IEnumerable<Dental.Models.EditPacjentModel>

@using GridMvc.Html

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(a => a.Imie).Titled("Imię");
    columns.Add(a => a.Nazwisko).Titled("Nazwisko");
    columns.Add(a => a.PESEL).Titled("PESEL");
    columns.Add(a => a.Email).Titled("Email");
    columns.Add(a => a.Telefon).Titled("Telefon");
    columns.Add(a => a.Wojewodztwo).Titled("Województwo");
    columns.Add(a => a.Miasto).Titled("Miasto");
    columns.Add(a => a.Ulica).Titled("Ulica");
    columns.Add(a => a.Kod).Titled("Kod");

    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Ajax.ActionLink("Wybierz", "ListaSzybkaWizyta",new {a.PacjentID }, new AjaxOptions {UpdateTargetId="edit", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @style="color:red"})).Titled("Wybór");
}).WithPaging(4).Sortable(true).Filterable(true).WithMultipleFilters()


