@model Dental.Models.DodajZabiegModel

@{
    
    Layout = "~/Views/Shared/MenuAdmin.cshtml";
}

<h4>Dodaj zabieg</h4>

@using (Html.BeginForm("SaveZabieg", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="modal-body row" style="padding-left: 250px; margin-right:100px; padding-bottom: 100px; padding-top:50px">
        
        <div class="col-md-4">            
            <div id="part1">
            @Html.Label("Zabieg:")<br />            
                @Html.TextBoxFor(model => model.Zabieg, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Zabieg)<br />

            @Html.Label("Gabinet:")<br />            
                @Html.DropDownListFor(model => model.Placowki, Model.ListPlacowki, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Placowki)<br />

        
            @Html.Label("Kategoria:")<br />             
                @Html.DropDownListFor(model => model.Kategoria, Model.ListKategorie, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Kategoria)<br />
        
            @Html.Label("Cena:")<br />             
                @Html.TextBoxFor(model => model.Cena, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cena)<br />                        
                                
                <input type="submit" class="button" value="Zapisz"/><br />
                <div class="text-danger">
                    @ViewBag.Message
                </div>    
                 
              </div> 
        </div>        
    </div>
}
