@model Dental.Models.SzybkaWizytaModel

<h4>Wyszukaj pacjenta</h4>

<div style="color:red">
    @TempData["Zapisano"]
</div>
<div class="modal-body row" style="padding-top:30px; padding-bottom:20px;">
    <div class="col-md-3">
            <div id="part1">
                @Html.Label("Imię:")<br />
                @Html.TextBoxFor(model => model.Miasto, new { @class = "form-control" })<br />
                
            </div>
        </div>
    <div class="col-md-3">
             <div id="part2">
                @Html.Label("Nazwisko:")<br />
                @Html.TextBoxFor(model => model.Nazwisko, new { @class = "form-control" })<br />
                </div>
        </div>
    
        <div class="col-md-3">
            <br />
            <input type="button" class="button" value="Szukaj" onclick="NowaSaveWizyta()"/><br /> 
        </div>
    <div class="col-md-3">
            <br />
            <input type="button" class="button" value="Nowy Pacjent" style="background-color:dodgerblue;" onclick="NowaSaveWizyta()"/><br /> 
        </div>
</div>

<div id="wynik" style="padding-top:50px; height:100px;">
    Lista wyników
</div>
<div class="modal-body row" style="margin-right:100px; padding-top: 100px;  ">

        <div class="col-md-4">            
             
             <div id="part4">                    
                    @Html.Label("Miasto:")<br />
                    @Html.DropDownListFor(model => model.Miasto, Model.ListaMiast, "Wybierz",  new { @class = "form-control" })<br />
                </div>
            
              <div id="part5">
                    @Html.Action("NowaWizytaGabinet")
                </div>
            <div id="part6">
                    @Html.Action("NowaWizytaLekarz")
                </div>
                
              
        </div>
        <div class="col-md-4">
            
            <div id="part7">
                @Html.Label("Data:")<br />
                @Html.TextBoxFor(model => model.Data, new { @class = "form-control" })<br />
                
            </div>
                <div id="part8">
                    @Html.Action("NowaWizytaGodzina")
                </div>  
                 <div id="part9">                   
                    @Html.HiddenFor(model => model.Stan, new { @class = "form-control" })<br />
                </div>
            <div id="part10">                    
                    @Html.Label("Rodzaj wizyty:")<br />
                    @Html.DropDownListFor(model => model.Rodzaj, Model.ListaRodzajow,  new { @class = "form-control" })<br />
                </div>
         </div>
     <div class="col-md-4">
                 <div id="part11">                    
                    @Html.Label("Typ wizyty:")<br />
                    @Html.DropDownListFor(model => model.Typ, Model.ListaTypy, new { @class = "form-control" })<br />
                </div>                 
                      <br />          
                <input type="button" class="button" value="Zapisz" onclick="NowaSaveWizyta()"/><br />                
            </div>
        </div>
<script>
    $(document).ready(function () {
        $('#Data').datepicker({
            format: 'dd.mm.yyyy',
            daysOfWeekDisabled: [0, 6],
        });
                
        $('#Miasto').change(function () {
            debugger;
            var dane = $(this).val();
            $.ajax({
                type: 'POST',
                url: '/Admin/NowaWizytaGabinet2',
                data: { miasto: dane },
                success: function (data) {
                    $('#part5').html(data);
                }
            });
        });

        $('#GabinetID').change(function () {
            debugger;
            var gabinet = $(this).val();
            $.ajax({
                type: 'POST',
                url: '/Admin/NowaWizytaLekarz2',
                data: { gabinet: gabinet },
                success: function (data) {
                    $('#part6').html(data);
                }

            });

        })

        $('#Data').change(function () {
            debugger;
            var lekarz = $('#LekarzID').val();
            var gabinet = $('#GabinetID').val();
            var data = $(this).val();
            $.ajax({
                type: 'POST',
                url: '/Admin/NowaWizytaGodzina2',
                data: { placowkaID: gabinet, lekarz: lekarz, data: data },
                success: function (data) {
                    $('#part8').html(data);
                }

            });

        })
    });
</script>