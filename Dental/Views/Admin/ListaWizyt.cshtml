@model IEnumerable<Dental.Models.ListaWizytModel>

@using GridMvc.Html


@Html.Grid(Model).Columns(columns =>
{columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Html.ActionLink("Rozwiń", "DetaleWizyta", new { a.WizytaID }, new { @style = "color:blue" })).Titled("Szczegóły");
    columns.Add(a => a.Imie).Titled("Imię");
    columns.Add(a => a.Nazwisko).Titled("Nazwisko");
    columns.Add(a => a.PESEL).Titled("PESEL");
    columns.Add(a => a.Godzina).Titled("Godzina");
    columns.Add(a => a.Stan).Titled("Stan").Filterable(true);
    columns.Add(a => a.Cena).Titled("Kwota do zapłaty");
    columns.Add(a => a.Uwagi).Titled("Uwagi");
   
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Html.ActionLink("Potwierdź", "PotwierdzWizyte", new { a.WizytaID }, new { @style = "color:green" })).Titled("Potwierdzenie");
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Html.ActionLink("Rozlicz", "RozliczWizyte", new { a.WizytaID }, new { @style = "color:black" })).Titled("Zamknięcie");;
    columns.Add().Encoded(false).Sanitized(false).RenderValueAs(a => Html.ActionLink("Anuluj", "UsunWizyte", new { a.WizytaID }, new { @style = "color:red" })).Titled("Anulowanie");
}).WithPaging(20).Sortable(true).Filterable(true).WithMultipleFilters()



