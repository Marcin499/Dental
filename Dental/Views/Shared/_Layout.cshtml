<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    .naglowek{
        background-color:darkgreen;
        padding-top: 0px;
    }    
    #strona{        
        position: relative;               
        vertical-align:bottom;
        padding-top: 25px;
        padding-left: 20px;
        font-size: 20px;
        color: white;
    }
    #image{        
        float:left;
        bottom: 2px;
        padding-right: 20px;
    }
    footer{
        text-align:center;
    }
    #body{
        padding-left:15px;
    }
</style>
<body>
    <div class="naglowek">
        <div class="container">
            <div id="image">
                <img src="/Image/Zab.png" alt="Dental">                                        
            </div>                       
            <div id="strona">
                @ViewBag.Strona           
            </div>
        </div>
    </div>
    <div id="body">
        @RenderBody()
    </div>
    <div id="footer">
        <footer>
            <p>&copy; @DateTime.Now.Year Chorzów - projekt inżynierski</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

